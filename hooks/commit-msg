#!/usr/bin/env bash

commit_types="(UPD:|FIX:|FEAT:)"
months_regex="(0?[1-9]|1[012])[- /.](0?[1-9]|[12][0-9]|3[01])[- /.](19|20)?[0-9]"
default_commit_regex="^(0?[1-9]|1[012])[- /.](0?[1-9]|[12][0-9]|3[01])[- /.](19|20)?[0-9]{2}$"

if ! grep -qE "$default_commit_regex" "$1"; then
  echo "Error ${default_commit_regex}"
  exit 1
fi

